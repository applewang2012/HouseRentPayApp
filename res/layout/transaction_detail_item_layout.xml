<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e5e5"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_marginTop="@dimen/base_dimen_10"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/detail_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_dimen_30"
            android:layout_marginTop="@dimen/base_dimen_16"
            android:text="付款成功"
            android:textColor="#000000"
            android:textSize="@dimen/base_dimen_30" />

        <TextView
            android:id="@+id/detail_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/base_dimen_30"
            android:layout_marginTop="@dimen/base_dimen_16"
            android:text="¥500"
            android:textColor="#337ffd"
            android:layout_gravity="right"
            android:textSize="@dimen/base_dimen_30" />
    </FrameLayout>
  <FrameLayout
      
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/detail_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_dimen_30"
            android:layout_marginBottom="@dimen/base_dimen_16"
            android:text="2017-06-30  10:38"
             android:textColor="#858585"
              android:layout_marginTop="@dimen/base_dimen_16"
            android:textSize="@dimen/base_dimen_30" />

        <TextView
            android:id="@+id/detail_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/base_dimen_30"
            android:layout_marginBottom="@dimen/base_dimen_16"
            android:text="微信支付"
            android:textColor="#858585"
            android:layout_gravity="right"
             android:layout_marginTop="@dimen/base_dimen_16"
            android:textSize="@dimen/base_dimen_30" />
    </FrameLayout>
</LinearLayout>