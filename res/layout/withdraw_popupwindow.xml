<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/withdraw_popup_bg"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/base_dimen_20"
        android:layout_marginTop="@dimen/base_dimen_20"
        android:gravity="center"
        android:text="转出500元"
        android:textColor="#555555"
        android:textSize="@dimen/base_dimen_32" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_1"
        android:layout_marginLeft="@dimen/base_dimen_20"
        android:layout_marginRight="@dimen/base_dimen_20"
        android:background="#cccccc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/base_dimen_10"
        android:layout_marginLeft="@dimen/base_dimen_20"
        android:layout_marginTop="@dimen/base_dimen_15"
        android:text="请输入银行手机号接收的验证码"
        android:textColor="#b2b2b2"
        android:textSize="@dimen/base_dimen_28" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/base_dimen_15"
            android:layout_marginLeft="@dimen/base_dimen_30"
            android:layout_marginTop="@dimen/base_dimen_15"
            android:background="@android:drawable/editbox_background"
            android:hint="请输入验证码"
            android:textColor="#555555"
            android:textColorHint="#b2b2b2"
            android:textSize="@dimen/base_dimen_28" />

        <View
            android:layout_width="@dimen/base_dimen_1"
            android:layout_height="@dimen/base_dimen_40"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/base_dimen_50"
            android:background="#cccccc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/base_dimen_66"
            android:lines="1"
            android:text="获取验证码"
            android:textColor="#337ffd"
            android:textSize="@dimen/base_dimen_30" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_1"
        android:layout_marginLeft="@dimen/base_dimen_20"
        android:layout_marginRight="@dimen/base_dimen_20"
        android:background="#cccccc" />
    <LinearLayout
        android:layout_marginTop="@dimen/base_dimen_20"
        android:layout_marginBottom="@dimen/base_dimen_10"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content" >
        <Button
            android:layout_marginLeft="@dimen/base_dimen_20"
            android:layout_width="@dimen/base_dimen_250"
            android:layout_height="@dimen/base_dimen_70"
            android:text="取消"
            android:background="@drawable/withdraw_btn_bg"
            android:textColor="@drawable/withdraw_popup_btn_text_bg"
            android:textSize="@dimen/base_dimen_32"
            />
            <Button
            android:layout_marginLeft="@dimen/base_dimen_10"
            android:layout_width="@dimen/base_dimen_250"
            android:layout_height="@dimen/base_dimen_70"
            android:text="确认"
            android:background="@drawable/withdraw_btn_bg"
            android:textColor="@drawable/withdraw_popup_btn_text_bg"
            android:textSize="@dimen/base_dimen_32"
            />  
      
</LinearLayout>
</LinearLayout>