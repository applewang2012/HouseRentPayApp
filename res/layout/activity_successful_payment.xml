<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout 
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
        >
    
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/base_dimen_90"
	        android:background="#337ffd"
	        android:gravity="center"
	        android:text="支付成功"
	        android:textColor="#ffffff"
	        android:textSize="@dimen/base_dimen_38"
	        android:textStyle="bold" />
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/base_dimen_96"
	        android:layout_marginBottom="@dimen/base_dimen_94"
	        android:layout_marginTop="@dimen/base_dimen_116"
	        android:gravity="center_horizontal" >
	
	        <ImageView
	            android:layout_width="@dimen/base_dimen_92"
	            android:layout_height="@dimen/base_dimen_93"
	            android:src="@drawable/payment_success" />
	
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:layout_marginLeft="@dimen/base_dimen_20"
	            android:text="支付成功！"
	            android:textColor="#777777"
	            android:textSize="@dimen/base_dimen_42" />
	    </LinearLayout>
	
	    <View
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/base_dimen_2"
	        android:background="#cccccc" />
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/base_dimen_38"
	            android:layout_marginTop="@dimen/base_dimen_36"
	            android:text="订单编号"
	            android:textColor="#555555"
	            android:textSize="@dimen/base_dimen_32" />
	
	        <TextView
	            android:id="@+id/id_pay_order_no"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/base_dimen_14"
	            android:layout_marginTop="@dimen/base_dimen_38"
	            android:text="3852 2576 6789 8900"
	            android:textColor="#888888"
	            android:textSize="@dimen/base_dimen_28" />
	    </LinearLayout>
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/base_dimen_38"
	            android:layout_marginTop="@dimen/base_dimen_32"
	            android:text="下单时间"
	            android:textColor="#555555"
	            android:textSize="@dimen/base_dimen_32" />
	
	        <TextView
	            android:id="@+id/id_pay_oder_time"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/base_dimen_14"
	            android:layout_marginTop="@dimen/base_dimen_34"
	            android:text="2017-8-24 14:05"
	            android:textColor="#888888"
	            android:textSize="@dimen/base_dimen_28" />
	    </LinearLayout>
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/base_dimen_38"
	            android:layout_marginTop="@dimen/base_dimen_32"
	            android:text="支付金额"
	            android:textColor="#555555"
	            android:textSize="@dimen/base_dimen_32" />
	
	        <TextView
	            android:id="@+id/id_pay_monkey"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/base_dimen_14"
	            android:layout_marginTop="@dimen/base_dimen_34"
	            android:text="¥500.00"
	            android:textColor="#337ffd"
	            android:textSize="@dimen/base_dimen_28" />
	    </LinearLayout>
	
	    <Button
	        android:id="@+id/id_button_finish_pay"
	        android:layout_marginTop="@dimen/base_dimen_40"
	        android:textColor="#ffffff"
	        android:background="@drawable/payment_success_btn_bg"
	        android:text="完成"
	        android:layout_gravity="center_horizontal"
	        android:gravity="center"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >
	    </Button>
    
    </LinearLayout>
    
    <include
        android:id="@+id/id_data_loading"
        layout="@layout/layout_loading_dialog"
       />   

</FrameLayout>