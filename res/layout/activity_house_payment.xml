<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >
  	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_90"
        android:background="#337ffd" >

        <ImageView
            android:layout_width="@dimen/base_dimen_44"
            android:layout_height="@dimen/base_dimen_44"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/base_dimen_20"
            android:background="@drawable/short_lease_back"
            android:clickable="true"
            android:onClick="backFinish" />

        <TextView
            android:id="@+id/id_titlebar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="支付房款"
            android:textColor="#ffffff"
            android:textSize="@dimen/base_dimen_38"
            android:textStyle="bold" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_130"
        android:layout_marginTop="@dimen/base_dimen_10"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/base_dimen_40"
            android:layout_marginLeft="@dimen/base_dimen_30"
            android:layout_marginTop="@dimen/base_dimen_46"
            android:gravity="center_vertical"
            android:text="支付金额"
            android:textColor="#555555"
            android:textSize="@dimen/base_dimen_30" />

        <TextView
            android:id="@+id/id_pay_price_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/base_dimen_40"
            android:layout_marginLeft="@dimen/base_dimen_400"
            android:layout_marginTop="@dimen/base_dimen_46"
            android:text="¥500.0"
            android:textColor="#337ffd"
            android:textSize="@dimen/base_dimen_30" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_90"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/base_dimen_10"
        android:background="#ffffff"
        android:paddingBottom="@dimen/base_dimen_20"
        android:paddingLeft="@dimen/base_dimen_30"
        android:paddingTop="@dimen/base_dimen_20"
        android:text="请选择支付方式"
        android:textColor="#777777"
        android:textSize="@dimen/base_dimen_28" />

    <LinearLayout
        android:id="@+id/payment_linearlayout_wallet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_90"
        android:layout_marginTop="@dimen/base_dimen_1"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/base_dimen_20"
        android:paddingTop="@dimen/base_dimen_20" >

        <ImageView
            android:layout_width="@dimen/base_dimen_50"
            android:layout_height="@dimen/base_dimen_38"
            android:layout_marginLeft="@dimen/base_dimen_30"
            android:src="@drawable/payment_wallet" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_dimen_22"
            android:text="钱包支付"
            android:textColor="#000000"
            android:textSize="@dimen/base_dimen_28" >
        </TextView>

        <CheckBox
            android:id="@+id/checkbox_wallet"
            android:layout_width="@dimen/base_dimen_42"
            android:layout_height="@dimen/base_dimen_42"
            android:layout_marginLeft="@dimen/base_dimen_400"
            android:background="@drawable/payment_checkbox_bg"
            android:button="@null"
            android:clickable="false" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/payment_linearlayout_wechat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_90"
        android:layout_marginTop="@dimen/base_dimen_1"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/base_dimen_20"
        android:paddingTop="@dimen/base_dimen_20" >

        <ImageView
            android:layout_width="@dimen/base_dimen_50"
            android:layout_height="@dimen/base_dimen_50"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/base_dimen_30"
            android:src="@drawable/payment_wechat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_dimen_22"
            android:text="微信支付"
            android:textColor="#000000"
            android:textSize="@dimen/base_dimen_28" >
        </TextView>

        <CheckBox
            android:checked="true"
            android:id="@+id/checkbox_wechat"
            android:layout_width="@dimen/base_dimen_42"
            android:layout_height="@dimen/base_dimen_42"
            android:layout_marginLeft="@dimen/base_dimen_400"
            android:background="@drawable/payment_checkbox_bg"
            android:button="@null"
            android:clickable="false" />
    </LinearLayout>

    <Button
        android:id="@+id/id_button_pay_money_button"
        android:layout_width="@dimen/base_dimen_680"
        android:layout_height="@dimen/base_dimen_80"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/base_dimen_400"
        android:background="@drawable/withdraw_btn_bg"
        android:text="立即付款"
        android:textColor="#ffffff" />


    </LinearLayout>
     <include
	        android:id="@+id/id_data_loading"
	        android:visibility="invisible"
	        layout="@layout/layout_loading_dialog"
       		/> 
       		
</FrameLayout>