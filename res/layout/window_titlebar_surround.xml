<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
       xmlns:android="http://schemas.android.com/apk/res/android"
       android:id="@+id/id_title_bar_home_content"
       android:layout_width="fill_parent"
       android:layout_height="@dimen/base_dimen_90"
       android:background="#337ffd"  
       >

        <LinearLayout
            android:id="@+id/id_home_select_city_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/id_home_show_city_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/base_dimen_20"
                android:gravity="center"
                android:orientation="horizontal"
                android:textColor="#ffffff"
                android:textSize="@dimen/base_dimen_30"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/base_dimen_20"
                android:layout_height="@dimen/base_dimen_11"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/base_dimen_10"
                android:background="@drawable/home_select_city_more"
                android:visibility="gone" />
        </LinearLayout>

       <TextView
           android:id="@+id/id_titlebar"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:text="首页"
           android:textColor="#ffffff"
           android:gravity="center_vertical"
           android:layout_gravity="center"
           android:textSize="@dimen/base_dimen_38"
           android:textStyle="bold"
       	/> 
        
        <TextView
            android:id="@+id/textview_login"
            android:layout_width="@dimen/base_dimen_80"
            android:layout_height="@dimen/base_dimen_40"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="@dimen/base_dimen_100"
            android:gravity="center"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="@dimen/base_dimen_34"
            android:textStyle="bold" />
        
        <FrameLayout
            android:id="@+id/home_search_container"
            android:layout_width="@dimen/base_dimen_100"
            android:layout_height="@dimen/base_dimen_90"
            android:layout_gravity="right"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/base_dimen_34"
                android:layout_height="@dimen/base_dimen_34"
                android:layout_gravity="center"
                android:background="@drawable/home_tab_search_icon" />
           
        </FrameLayout>
</FrameLayout>