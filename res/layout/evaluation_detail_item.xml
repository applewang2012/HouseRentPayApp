<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/detail_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_dimen_30"
            android:layout_marginTop="@dimen/base_dimen_20"
            android:gravity="center_vertical"
            android:text="用户名"
            android:textColor="#444444"
            android:textSize="@dimen/base_dimen_28" />

        <TextView
            android:id="@+id/detail_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_dimen_360"
            android:layout_marginTop="@dimen/base_dimen_20"
            android:gravity="center_vertical"
            android:text="2017-09-25 12:00"
            android:textColor="#666666"
            android:textSize="@dimen/base_dimen_28" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_1"
        android:layout_marginTop="@dimen/base_dimen_20"
        android:background="#f1f2f3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="@dimen/base_dimen_122"
            android:layout_height="@dimen/base_dimen_34"
            android:layout_marginLeft="@dimen/base_dimen_26"
            android:layout_marginTop="@dimen/base_dimen_28"
            android:text="服务评分"
            android:textColor="#777777"
            android:textSize="@dimen/base_dimen_28" />

        <tenant.guardts.house.view.CustomRatingBar2
            android:id="@+id/evaluation_service_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           >
        </tenant.guardts.house.view.CustomRatingBar2>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="@dimen/base_dimen_122"
            android:layout_height="@dimen/base_dimen_34"
            android:layout_marginLeft="@dimen/base_dimen_26"
            android:layout_marginTop="@dimen/base_dimen_28"
            android:text="环境评分"
            android:textColor="#777777"
            android:textSize="@dimen/base_dimen_28" />

        <tenant.guardts.house.view.CustomRatingBar2
            android:id="@+id/evaluation_environmental_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           >
        </tenant.guardts.house.view.CustomRatingBar2>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/base_dimen_20"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="@dimen/base_dimen_122"
            android:layout_height="@dimen/base_dimen_34"
            android:layout_marginLeft="@dimen/base_dimen_26"
            android:layout_marginTop="@dimen/base_dimen_28"
            android:text="价格评分"
            android:textColor="#777777"
            android:textSize="@dimen/base_dimen_28" />

        <tenant.guardts.house.view.CustomRatingBar2
            android:id="@+id/evaluation_price_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        </tenant.guardts.house.view.CustomRatingBar2>
    </LinearLayout>

</LinearLayout>