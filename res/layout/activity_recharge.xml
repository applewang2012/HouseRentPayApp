<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/base_dimen_30"
        android:layout_marginTop="@dimen/base_dimen_60"
        android:text="请选择充值金额"
        android:textColor="#777777"
        android:textSize="@dimen/base_dimen_30" >
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_dimen_28" >

        <RadioButton
            android:layout_width="@dimen/base_dimen_320"
            android:layout_height="@dimen/base_dimen_70"
            android:layout_marginLeft="@dimen/base_dimen_30"
            android:background="@drawable/recharge_checkbox_bg"
            android:button="@null"
            android:text="800元"
            android:textColor="#555555"
            android:textSize="@dimen/base_dimen_30" />

        <RadioButton
            android:layout_width="@dimen/base_dimen_320"
            android:layout_height="@dimen/base_dimen_70"
            android:layout_marginLeft="@dimen/base_dimen_20"
            android:background="@drawable/recharge_checkbox_bg"
            android:button="@null"
            android:text="500元"
            android:textColor="#555555"
            android:textSize="@dimen/base_dimen_30" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_dimen_30" >

        <RadioButton
            android:layout_width="@dimen/base_dimen_320"
            android:layout_height="@dimen/base_dimen_70"
            android:layout_marginLeft="@dimen/base_dimen_30"
            android:background="@drawable/recharge_checkbox_bg"
            android:button="@null"
            android:text="200元"
            android:textColor="#555555"
            android:textSize="@dimen/base_dimen_30" />

        <EditText
            android:layout_width="@dimen/base_dimen_320"
            android:layout_height="@dimen/base_dimen_70"
            android:layout_marginLeft="@dimen/base_dimen_20"
            android:background="@android:drawable/editbox_background_normal"
            android:hint="其他金额"
            android:textColor="#555555"
            android:textSize="@dimen/base_dimen_30" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/base_dimen_30"
        android:layout_marginTop="@dimen/base_dimen_34"
        android:text="请选择付款方式"
        android:textColor="#777777"
        android:textSize="@dimen/base_dimen_30" >
    </TextView>
<LinearLayout
        
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_90"
        android:layout_marginTop="@dimen/base_dimen_40"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/base_dimen_20"
        android:paddingTop="@dimen/base_dimen_20" >

        <ImageView
            android:layout_width="@dimen/base_dimen_50"
            android:layout_height="@dimen/base_dimen_50"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/base_dimen_30"
            android:src="@drawable/payment_wechat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_dimen_22"
            android:text="微信支付"
            android:textColor="#000000"
            android:textSize="@dimen/base_dimen_28" >
        </TextView>
        <CheckBox
            android:checked="true"
            android:id="@+id/checkbox_wechat"
            android:layout_width="@dimen/base_dimen_42"
            android:layout_height="@dimen/base_dimen_42"
            android:layout_marginLeft="@dimen/base_dimen_400"
            android:background="@drawable/payment_checkbox_bg"
            android:button="@null"
            android:clickable="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f1f1f1" >

<Button
        android:layout_width="@dimen/base_dimen_680"
        android:layout_height="@dimen/base_dimen_80"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/base_dimen_400"
        android:background="@drawable/withdraw_btn_bg"
        android:text="立即付款"
        android:textColor="#ffffff" />
</LinearLayout>
</LinearLayout>