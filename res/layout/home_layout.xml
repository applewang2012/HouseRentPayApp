<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
     >
     
    <FrameLayout
		android:id="@+id/id_home_content"
		android:layout_width="match_parent"
		android:layout_height="match_parent" 
		android:paddingBottom="55dp"
		android:persistentDrawingCache="animation"
		/>
    <LinearLayout
           android:id="@+id/id_home_button_container"
           android:layout_width="fill_parent"
           android:layout_height="55dp"
           android:layout_gravity="bottom"
           android:background="#f1f5fc"
           android:orientation="horizontal"
           >
           <LinearLayout 
               android:id="@+id/id_home_tab_home"
	           android:layout_width="0dp"
	           android:layout_height="match_parent"
	           android:layout_weight="1"
	           android:orientation="vertical"
	           android:clickable="true"
	           android:gravity="center_horizontal"
               >
               <ImageView
                   android:id="@+id/id_home_tab_home_icon"
                   android:layout_width="32dp"
	           	   android:layout_height="32dp"
	           	   android:layout_marginTop="3dp"
	           	   android:background="@drawable/home_icon"
	           	   
                   />
               <TextView 
                   android:id="@+id/id_home_tab_home_text"
                   android:layout_width="match_parent"
	           	   android:layout_height="15dp"
	           	   android:textColor="#0b6cfe"
	           	   android:textSize="12dp"
	           	   android:text="首页"
	           	   android:textStyle="bold"
	           	   android:gravity="center_horizontal"
                   />
           </LinearLayout>
          <LinearLayout 
               android:id="@+id/id_home_tab_surround"
	           android:layout_width="0dp"
	           android:layout_height="match_parent"
	           android:layout_weight="1"
	           android:orientation="vertical"
	           android:clickable="true"
	           android:gravity="center_horizontal"
               >
               <ImageView
                   android:id="@+id/id_home_tab_surround_icon"
                   android:layout_width="32dp"
	           	   android:layout_height="32dp"
	           	   android:layout_marginTop="3dp"
	           	   android:background="@drawable/surround_icon_default"
                   />
               <TextView 
                   android:id="@+id/id_home_tab_surround_text"
                   android:layout_width="match_parent"
	           	   android:layout_height="15dp"
	           	   android:textColor="#afaeae"
	           	   android:textSize="12dp"
	           	   android:text="周边"
	           	   android:textStyle="bold"
	           	   android:gravity="center_horizontal"
                   />
           </LinearLayout>
           <LinearLayout 
               android:id="@+id/id_home_tab_history"
	           android:layout_width="0dp"
	           android:layout_height="match_parent"
	           android:layout_weight="1"
	           android:orientation="vertical"
	           android:clickable="true"
	           android:gravity="center_horizontal"
               >
               <ImageView
                   android:id="@+id/id_home_tab_history_icon"
                   android:layout_width="32dp"
	           	   android:layout_height="32dp"
	           	   android:layout_marginTop="3dp"
	           	   android:background="@drawable/history_icon_default"
                   />
               <TextView 
                   android:id="@+id/id_home_tab_history_text"
                   android:layout_width="match_parent"
	           	   android:layout_height="15dp"
	           	   android:textColor="#afaeae"
	           	   android:textSize="12dp"
	           	   android:text="历史"
	           	   android:textStyle="bold"
	           	   android:gravity="center_horizontal"
                   />
           </LinearLayout>
           <LinearLayout 
               android:id="@+id/id_home_tab_my"
	           android:layout_width="0dp"
	           android:layout_height="match_parent"
	           android:layout_weight="1"
	           android:orientation="vertical"
	           android:clickable="true"
	           android:gravity="center_horizontal"
               >
               <ImageView
                   android:id="@+id/id_home_tab_my_icon"
                   android:layout_width="32dp"
	           	   android:layout_height="32dp"
	           	   android:layout_marginTop="2dp"
	           	   android:background="@drawable/my_icon_default"
                   />
               <TextView 
                   android:id="@+id/id_home_tab_my_text"
                   android:layout_width="match_parent"
	           	   android:layout_height="15dp"
	           	   android:textColor="#afaeae"
	           	   android:textSize="12dp"
	           	   android:text="我的"
	           	   android:textStyle="bold"
	           	   android:gravity="center_horizontal"
                   />
           </LinearLayout>
   </LinearLayout>
   
	  
</FrameLayout>
