<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/base_dimen_30"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/base_dimen_20"
        android:layout_marginLeft="@dimen/base_dimen_30"
        android:layout_marginTop="@dimen/base_dimen_20"
        android:textSize="@dimen/base_dimen_30" 
        android:text="入住时间：2017-09-23 00:00:00"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/base_dimen_20"
        android:layout_marginRight="@dimen/base_dimen_80"
        android:layout_marginTop="@dimen/base_dimen_20"
        android:layout_gravity="right|center_vertical"
        android:gravity="right"
        android:text="李大爷"
        android:textColor="#000000"
        android:textSize="@dimen/base_dimen_30" />

    <ImageView
        android:id="@+id/img"
       	android:layout_marginRight="@dimen/base_dimen_20"
        android:layout_gravity="center_vertical|right"
        android:layout_width="@dimen/base_dimen_34"
        android:layout_height="@dimen/base_dimen_20"
        android:src="@drawable/history_down" />

</FrameLayout>