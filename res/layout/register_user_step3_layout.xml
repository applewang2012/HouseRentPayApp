<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="@dimen/base_dimen_522"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base_dimen_42"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base_dimen_38"
                    android:layout_marginTop="@dimen/base_dimen_80"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="@dimen/base_dimen_68"
                        android:layout_height="@dimen/base_dimen_2"
                        android:layout_gravity="center_vertical"
                        android:background="#ffffff" />

                    <ImageView
                        android:layout_width="@dimen/base_dimen_38"
                        android:layout_height="@dimen/base_dimen_38"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/register_step1_select" />

                    <ImageView
                        android:layout_width="@dimen/base_dimen_68"
                        android:layout_height="@dimen/base_dimen_2"
                        android:layout_gravity="center_vertical"
                        android:background="#337ffd" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/base_dimen_14"
                    android:gravity="center"
                    android:text="手机绑定"
                    android:textColor="#337ffd"
                    android:textSize="@dimen/base_dimen_26" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/base_dimen_47"
                    android:layout_height="@dimen/base_dimen_68"
                    android:layout_gravity="center"
                    android:background="@drawable/register_step_marker" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base_dimen_38"
                    android:layout_marginTop="@dimen/base_dimen_12"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="@dimen/base_dimen_68"
                        android:layout_height="@dimen/base_dimen_2"
                        android:layout_gravity="center_vertical"
                        android:background="#337ffd" />

                    <ImageView
                        android:layout_width="@dimen/base_dimen_38"
                        android:layout_height="@dimen/base_dimen_38"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/register_step2_select" />

                    <ImageView
                        android:layout_width="@dimen/base_dimen_68"
                        android:layout_height="@dimen/base_dimen_2"
                        android:layout_gravity="center_vertical"
                        android:background="#337ffd" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/base_dimen_14"
                    android:gravity="left"
                    android:text="实名认证"
                    android:textColor="#337ffd"
                    android:textSize="@dimen/base_dimen_26" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base_dimen_38"
                    android:layout_marginTop="@dimen/base_dimen_80"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="@dimen/base_dimen_68"
                        android:layout_height="@dimen/base_dimen_2"
                        android:layout_gravity="center_vertical"
                        android:background="#337ffd" />

                    <ImageView
                        android:layout_width="@dimen/base_dimen_38"
                        android:layout_height="@dimen/base_dimen_38"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/base_dimen_80"
                        android:background="@drawable/register_step3_normal" />

                    <ImageView
                        android:layout_width="@dimen/base_dimen_68"
                        android:layout_height="@dimen/base_dimen_2"
                        android:layout_gravity="center_vertical"
                        android:background="#ffffff" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/base_dimen_14"
                    android:gravity="center"
                    android:text="注册完成"
                    android:textColor="#b2b2b2"
                    android:textSize="@dimen/base_dimen_26" />
            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="@dimen/base_dimen_520"
            android:layout_height="@dimen/base_dimen_80"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base_dimen_97"
            android:background="@drawable/item_shape_no_solid_corner" >

            <ImageView
                android:layout_width="@dimen/base_dimen_32"
                android:layout_height="@dimen/base_dimen_32"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/base_dimen_15"
                android:background="@drawable/register_step3_realname" />

            <EditText
                android:id="@+id/id_register_step3_input_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_34"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/base_dimen_64"
                android:layout_marginTop="@dimen/base_dimen_6"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:hint="请输入真实姓名"
                android:textColor="#000000"
                android:textColorHint="#b2b2b2"
                android:textSize="@dimen/base_dimen_28" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="@dimen/base_dimen_520"
            android:layout_height="@dimen/base_dimen_80"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base_dimen_30"
            android:background="@drawable/item_shape_no_solid_corner" >

            <ImageView
                android:layout_width="@dimen/base_dimen_30"
                android:layout_height="@dimen/base_dimen_24"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/base_dimen_18"
                android:background="@drawable/register_step3_idcard" />

            <EditText
                android:id="@+id/id_register_step3_input_idcard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_38"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/base_dimen_64"
                android:layout_marginTop="@dimen/base_dimen_6"
                android:background="#00000000"
                android:digits="@string/edit_idcard_input"
                android:gravity="center_vertical"
                android:hint="请输入二代身份证号码"
                android:maxLength="18"
                android:textColor="#000000"
                android:textColorHint="#b2b2b2"
                android:textSize="@dimen/base_dimen_28" />
        </FrameLayout>

        <Button
            android:id="@+id/id_register_user_step3_next"
            android:layout_width="@dimen/base_dimen_520"
            android:layout_height="@dimen/base_dimen_80"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base_dimen_170"
            android:background="@drawable/item_blue_button_corner_selector"
            android:gravity="center"
            android:text="下一步"
            android:textColor="#ffffff"
            android:textSize="@dimen/base_dimen_30" />
    </LinearLayout>

    <include
        android:id="@+id/id_data_loading"
        layout="@layout/layout_loading_dialog"
        android:visibility="invisible" />

</FrameLayout>