<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_dimen_26"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="@dimen/base_dimen_20"
            android:layout_height="@dimen/base_dimen_28"
            android:layout_marginLeft="@dimen/base_dimen_30"
            android:src="@drawable/evaluation_location" />

        <TextView
            android:id="@+id/evaluation_textview_house_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_dimen_10"
            android:text="河西区陈塘庄珠江道69号"
            android:textColor="#333333"
            android:textSize="@dimen/base_dimen_30" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="@dimen/base_dimen_122"
            android:layout_height="@dimen/base_dimen_34"
            android:layout_marginLeft="@dimen/base_dimen_26"
            android:layout_marginTop="@dimen/base_dimen_30"
            android:text="综合评分"
            android:textColor="#777777"
            android:textSize="@dimen/base_dimen_28" />

        <tenant.guardts.house.view.CustomRatingBar
            android:id="@+id/evaluation_overall_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </tenant.guardts.house.view.CustomRatingBar>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_10"
        android:layout_marginTop="@dimen/base_dimen_24"
        android:background="#f1f2f3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="@dimen/base_dimen_122"
            android:layout_height="@dimen/base_dimen_34"
            android:layout_marginLeft="@dimen/base_dimen_26"
            android:layout_marginTop="@dimen/base_dimen_28"
            android:text="服务评分"
            android:textColor="#777777"
            android:textSize="@dimen/base_dimen_28" />

        <tenant.guardts.house.view.CustomRatingBar
            android:id="@+id/evaluation_service_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </tenant.guardts.house.view.CustomRatingBar>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="@dimen/base_dimen_122"
            android:layout_height="@dimen/base_dimen_34"
            android:layout_marginLeft="@dimen/base_dimen_26"
            android:layout_marginTop="@dimen/base_dimen_28"
            android:text="环境评分"
            android:textColor="#777777"
            android:textSize="@dimen/base_dimen_28" />

        <tenant.guardts.house.view.CustomRatingBar
            android:id="@+id/evaluation_environmental_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </tenant.guardts.house.view.CustomRatingBar>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="@dimen/base_dimen_122"
            android:layout_height="@dimen/base_dimen_34"
            android:layout_marginLeft="@dimen/base_dimen_26"
            android:layout_marginTop="@dimen/base_dimen_28"
            android:text="价格评分"
            android:textColor="#777777"
            android:textSize="@dimen/base_dimen_28" />

        <tenant.guardts.house.view.CustomRatingBar
            android:id="@+id/evaluation_price_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </tenant.guardts.house.view.CustomRatingBar>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_10"
        android:layout_marginTop="@dimen/base_dimen_24"
        android:background="#f1f2f3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f1f2f3"
        android:paddingTop="@dimen/base_dimen_16" >

        <CheckBox
            android:layout_width="@dimen/base_dimen_213"
            android:layout_height="@dimen/base_dimen_60"
            android:layout_marginLeft="@dimen/base_dimen_30"
            android:background="@drawable/checkbox_evaluation_bg"
            android:button="@null"
            android:gravity="center"
            android:text="环境良好"
            android:id="@+id/eval_checkbox1"
            android:textColor="@drawable/checkbox_eval_text_bg" />

        <CheckBox
            android:layout_width="@dimen/base_dimen_213"
            android:layout_height="@dimen/base_dimen_60"
            android:layout_marginLeft="@dimen/base_dimen_10"
            android:background="@drawable/checkbox_evaluation_bg"
            android:button="@null"
            android:gravity="center"
            android:text="交通方便"
            android:id="@+id/eval_checkbox2"
            android:textColor="@drawable/checkbox_eval_text_bg" />

        <CheckBox
            android:layout_width="@dimen/base_dimen_213"
            android:layout_height="@dimen/base_dimen_60"
            android:layout_marginLeft="@dimen/base_dimen_10"
            android:background="@drawable/checkbox_evaluation_bg"
            android:button="@null"
            android:gravity="center"
            android:text="态度好"
            android:id="@+id/eval_checkbox3"
            android:textColor="@drawable/checkbox_eval_text_bg" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f1f2f3"
        android:paddingTop="@dimen/base_dimen_16" >

        <CheckBox
            android:layout_width="@dimen/base_dimen_213"
            android:layout_height="@dimen/base_dimen_60"
            android:layout_marginLeft="@dimen/base_dimen_30"
            android:background="@drawable/checkbox_evaluation_bg"
            android:button="@null"
            android:gravity="center"
            android:text="家电齐全"
            android:id="@+id/eval_checkbox4"
            android:textColor="@drawable/checkbox_eval_text_bg" />

        <CheckBox
            android:layout_width="@dimen/base_dimen_213"
            android:layout_height="@dimen/base_dimen_60"
            android:layout_marginLeft="@dimen/base_dimen_10"
            android:background="@drawable/checkbox_evaluation_bg"
            android:button="@null"
            android:gravity="center"
            android:text="价格公道"
            android:id="@+id/eval_checkbox5"
            android:textColor="@drawable/checkbox_eval_text_bg" />

        <CheckBox
            android:layout_width="@dimen/base_dimen_213"
            android:layout_height="@dimen/base_dimen_60"
            android:layout_marginLeft="@dimen/base_dimen_10"
            android:background="@drawable/checkbox_evaluation_bg"
            android:button="@null"
            android:gravity="center"
            android:text="环境较差"
            android:id="@+id/eval_checkbox6"
            android:textColor="@drawable/checkbox_eval_text_bg" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f1f2f3" >

        <Button
            android:id="@+id/evaluation_btn_submit"
            android:layout_width="@dimen/base_dimen_220"
            android:layout_height="@dimen/base_dimen_80"
            android:layout_marginLeft="@dimen/base_dimen_470"
            android:layout_marginTop="@dimen/base_dimen_20"
            android:background="@drawable/evaluation_btn_bg"
            android:gravity="center"
            android:text="提交评价"
            android:textColor="#ffffff"
            android:textSize="@dimen/base_dimen_32"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>