<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f2f3"
     >
	<LinearLayout 
	    android:id="@+id/id_frament_house_cotent"
	    android:layout_width="match_parent"
   		android:layout_height="match_parent"
   		android:orientation="vertical"
	    >
	    
	    <FrameLayout
	        android:id="@+id/id_viewflow_framelayout"
	        android:layout_width="fill_parent"
	        android:layout_height="@dimen/base_dimen_284"
	        android:orientation="vertical" >
	
	        <tenant.guardts.house.bannerview.ViewFlow
	            android:id="@+id/id_rent_to_viewflow"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent" 
	            android:paddingLeft="@dimen/base_dimen_20"
	            android:paddingRight="@dimen/base_dimen_20"
	            android:paddingTop="@dimen/base_dimen_20"
	            />
	
		        <FrameLayout
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_gravity="bottom"
		            android:background="@color/transparent"
		            android:gravity="center"
		            >
		        
			       <tenant.guardts.house.bannerview.CircleFlowIndicator 
			            android:id="@+id/id_rent_to_viewflow_indicator"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_gravity="center_horizontal|bottom"
			            android:padding="2dip"
			            app:activeColor="#ff0000"
			            app:activeType="fill"
			            app:circleSeparation="20dip"
			            app:inactiveColor="#ffffff"
			            app:inactiveType="fill"
			            app:radius="4dip"
			            />
	          
	        </FrameLayout>
        </FrameLayout>
	    <ListView 
	        android:id="@+id/id_fragment_house_listview" 
		    android:layout_width="fill_parent"
		    android:layout_height="match_parent"
		    android:cacheColorHint="#00000000"
		    android:fadingEdge="none"
		    android:divider="#00000000"
		    android:layout_marginTop="@dimen/base_dimen_20"
		    android:paddingLeft="@dimen/base_dimen_20"
		    android:paddingRight="@dimen/base_dimen_20"
		    android:dividerHeight="@dimen/base_dimen_10"
	    />
	</LinearLayout>
    <TextView 
        android:id="@+id/id_frament_house_no_cotent"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:text="点击“+”添加房屋进行出租"
    	android:gravity="center"
    	android:textSize="@dimen/base_dimen_42"
    	android:textColor="#888888"
    	android:visibility="invisible"
        />
	<include
        android:id="@+id/id_data_loading"
        layout="@layout/layout_loading_dialog"
       />   
</FrameLayout>
