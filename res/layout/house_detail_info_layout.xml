<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
     >
     <ScrollView 
         android:layout_width="fill_parent"  
         android:layout_height="fill_parent">  
         <LinearLayout 
             android:layout_width="fill_parent"  
        	 android:layout_height="fill_parent"
        	 android:orientation="vertical">
        	 <FrameLayout
	        android:id="@+id/id_viewflow_framelayout"
	        android:layout_width="fill_parent"
	        android:layout_height="230dip"
	        android:orientation="vertical" >
	
	        <tenant.guardts.house.bannerview.ViewFlow
	            android:id="@+id/viewflow"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent" />
	
	        <FrameLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_gravity="bottom"
	            android:background="@color/transparent"
	            android:gravity="center"
	            android:padding="3dip" >
	        
		        <tenant.guardts.house.bannerview.CircleFlowIndicator 
		            android:id="@+id/viewflowindic"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_horizontal|bottom"
		            android:padding="2dip"
		            app:activeColor="#ff0000"
		            app:activeType="fill"
		            app:circleSeparation="20dip"
		            app:inactiveColor="#ffffff"
		            app:inactiveType="fill"
		            app:radius="4dip"
		            />
          
        </FrameLayout>
    </FrameLayout>
        	<!--  <ImageView 
        	     android:layout_width="320dp"
	        	 android:layout_height="130dp"
	        	 android:layout_marginTop="10dp"
	        	 android:layout_gravity="center_horizontal"
	        	 android:background="@drawable/view_banner"
        	     /> -->
             <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="20dp"
		        android:layout_marginRight="20dp"
		        android:layout_marginTop="30dp"
		        android:orientation="vertical"
	        	>
	        	<LinearLayout 
	        	    android:layout_width="match_parent"
		        	android:layout_height="60dp"
		        	android:orientation="horizontal"
		        	android:gravity="center_vertical"
	        	    >
	        	    <TextView 
	        	        android:layout_width="0dp"
		        		android:layout_height="match_parent"
		        		android:layout_weight="1"
		        		android:text="产权编号"
		        		android:textColor="#666666"
			    		android:textSize="15dp"
			    		android:gravity="left|center_vertical"
	        	        />
	        	    <TextView 
	        	        android:id="@+id/id_rent_house_number"
	        	         android:layout_width="0dp"
		        		 android:layout_height="match_parent"
		        		 android:layout_weight="3"
		        		 android:maxLength="20"
		        		 android:textColor="#afaeae"
			    		 android:textSize="15dp"
			    		 android:gravity="left|center_vertical"
	        	        />
	        	   </LinearLayout>
	        	<ImageView 
	        	     android:layout_width="match_parent"
		        	 android:layout_height="1dp"
		        	 android:background="#0c000000"
	        	     />
	        	<LinearLayout 
	        	    android:layout_width="match_parent"
		        	android:layout_height="60dp"
		        	android:orientation="horizontal"
		        	android:gravity="center_vertical"
	        	    >
	        	    <TextView 
	        	        android:layout_width="0dp"
		        		android:layout_height="match_parent"
		        		android:layout_weight="1"
		        		android:text="房主"
		        		android:textColor="#666666"
			    		android:textSize="15dp"
			    		android:gravity="left|center_vertical"
	        	        />
	        	    <TextView 
	        	        android:id="@+id/id_rent_house_name"
	        	         android:layout_width="0dp"
		        		 android:layout_height="35dp"
		        		 android:layout_weight="3"
		        		 android:paddingLeft="5dp"
		        		 android:textSize="14dp"
		        		 android:textColor="#afaeae"
		        		 android:gravity="left|center_vertical"
	        	        />
	        	    </LinearLayout>
	        	    <ImageView 
	        	     android:layout_width="match_parent"
		        	 android:layout_height="1dp"
		        	 android:background="#0c000000"
	        	     />
	        	<LinearLayout 
	        	    android:layout_width="match_parent"
		        	android:layout_height="60dp"
		        	android:orientation="horizontal"
		        	android:gravity="center_vertical"
	        	    >
	        	    <TextView 
	        	        android:layout_width="0dp"
		        		android:layout_height="match_parent"
		        		android:layout_weight="1"
		        		android:text="手	机"
		        		android:textColor="#666666"
			    		android:textSize="15dp"
			    		android:gravity="left|center_vertical"
	        	        />
	        	    <TextView 
	        	        android:id="@+id/id_rent_house_phone"
	        	         android:layout_width="0dp"
		        		 android:layout_height="35dp"
		        		 android:layout_weight="3"
		        		 android:maxLength="11"
		        		 android:inputType="number"
		        		 android:paddingLeft="5dp"
		        		 android:textSize="14dp"
		        		 android:gravity="left|center_vertical"
		        		 android:textColor="#afaeae"
	        	        />
	        	    </LinearLayout>
	        	<ImageView 
	        	     android:layout_width="match_parent"
		        	 android:layout_height="1dp"
		        	 android:background="#0c000000"
	        	     />
	        	<LinearLayout 
	        	    android:layout_width="match_parent"
		        	android:layout_height="60dp"
		        	android:orientation="horizontal"
		        	android:gravity="center_vertical"
	        	    >
	        	    <TextView 
	        	        android:layout_width="0dp"
		        		android:layout_height="match_parent"
		        		android:layout_weight="1"
		        		android:text="面积"
		        		android:textColor="#666666"
			    		android:textSize="15dp"
			    		android:gravity="left|center_vertical"
	        	        />
