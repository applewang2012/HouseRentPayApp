	        	        />
	        	    <TextView 
	        	        android:id="@+id/id_rent_house_type"
	        	         android:layout_width="0dp"
		        		 android:layout_height="35dp"
		        		 android:layout_weight="3"
		        		 android:maxLength="50"
		        		 android:paddingLeft="5dp"
		        		 android:textSize="14dp"
		        		 android:gravity="left|center_vertical"
		        		 android:textColor="#afaeae"
	        	        />
	        	</LinearLayout>
	        	<ImageView 
	        	     android:layout_width="match_parent"
		        	 android:layout_height="1dp"
		        	 android:background="#0c000000"
	        	     />
	        	<LinearLayout 
	        	    android:layout_width="match_parent"
		        	android:layout_height="60dp"
		        	android:orientation="horizontal"
		        	android:gravity="center_vertical"
	        	    >
	        	    <TextView 
	        	        android:layout_width="0dp"
		        		android:layout_height="match_parent"
		        		android:layout_weight="1"
		        		android:text="朝向"
		        		android:textColor="#666666"
			    		android:textSize="15dp"
			    		android:gravity="left|center_vertical"
	        	        />
	        	    <TextView 
	        	        android:id="@+id/id_rent_house_direction"
	        	         android:layout_width="0dp"
		        		 android:layout_height="35dp"
		        		 android:layout_weight="3"
		        		 android:paddingLeft="5dp"
		        		 android:textSize="14dp"
		        		 android:gravity="left|center_vertical"
		        		 android:textColor="#afaeae"
	        	        />
	        	</LinearLayout>
	        	<ImageView 
	        	     android:layout_width="match_parent"
		        	 android:layout_height="1dp"
		        	 android:background="#0c000000"
	        	     />
	        	<LinearLayout 
	        	    android:layout_width="match_parent"
		        	android:layout_height="60dp"
		        	android:orientation="horizontal"
		        	android:gravity="center_vertical"
	        	    >
	        	    <TextView 
	        	        android:layout_width="0dp"
		        		android:layout_height="match_parent"
		        		android:layout_weight="1"
		        		android:text="楼层"
		        		android:textColor="#666666"
			    		android:textSize="15dp"
			    		android:gravity="left|center_vertical"
	        	        />
	        	    <TextView 
	        	        android:id="@+id/id_rent_house_floor"
	        	         android:layout_width="0dp"
		        		 android:layout_height="35dp"
		        		 android:layout_weight="3"
		        		 android:paddingLeft="5dp"
		        		 android:textSize="14dp"
		        		 android:gravity="left|center_vertical"
		        		 android:textColor="#afaeae"
	        	        />
	        	</LinearLayout>
	        	
	        	<ImageView 
	        	     android:layout_width="match_parent"
		        	 android:layout_height="1dp"
		        	 android:background="#0c000000"
	        	     />
	        	<LinearLayout 
	        	    android:layout_width="match_parent"
		        	android:layout_height="60dp"
		        	android:orientation="horizontal"
		        	android:gravity="center_vertical"
	        	    >
	        	    <TextView 
	        	        android:layout_width="0dp"
		        		android:layout_height="match_parent"
		        		android:layout_weight="1"
		        		android:text="地址"
		        		android:textColor="#666666"
			    		android:textSize="15dp"
			    		android:gravity="left|center_vertical"
	        	        />
	        	    <TextView 
	        	        android:id="@+id/id_rent_house_address"
	        	         android:layout_width="0dp"
		        		 android:layout_height="35dp"
		        		 android:layout_weight="3"
		        		 android:paddingLeft="5dp"
		        		 android:textSize="14dp"
		        		 android:gravity="left|center_vertical"
		        		 android:textColor="#afaeae"
	        	        />
	        	</LinearLayout>
	        	<ImageView 
	        	     android:layout_width="match_parent"
		        	 android:layout_height="1dp"
		        	 android:background="#0c000000"
	        	     />
	        
	        	<LinearLayout 
	        	    android:layout_width="match_parent"
		        	android:layout_height="60dp"
		        	android:orientation="horizontal"
		        	android:gravity="center_vertical"
	        	    >
	        	    <TextView 
	        	        android:layout_width="0dp"
		        		android:layout_height="match_parent"
		        		android:layout_weight="1"
		        		android:text="状态"
		        		android:textColor="#666666"
			    		android:textSize="15dp"
			    		android:gravity="left|center_vertical"
	        	        />
	        	    <TextView 
	        	        android:id="@+id/id_rent_house_status"
	        	         android:layout_width="0dp"
		        		 android:layout_height="35dp"
		        		 android:layout_weight="3"
		        		 android:inputType="number"
		        		 android:maxLength="8"
		        		 android:paddingLeft="5dp"
		        		 android:textSize="14dp"
		        		 android:gravity="left|center_vertical"
		        		 android:textColor="#afaeae"
	        	        />
	        	</LinearLayout>
	        	
	        	<ImageView 
	        	     android:layout_width="match_parent"
		        	 android:layout_height="1dp"
		        	 android:background="#0c000000"
	        	     />
	        
	       </LinearLayout>
	      </LinearLayout>
     </ScrollView>

    <include
        android:id="@+id/id_data_loading"
        layout="@layout/layout_loading_dialog"
       />
    
	       
</FrameLayout>
