<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	
    <FrameLayout
       android:layout_width="fill_parent"
       android:layout_height="@dimen/base_dimen_90"
       android:orientation="horizontal"
       android:background="#337ffd"
       >
       <LinearLayout 
           android:id="@+id/id_home_select_city_content"
           android:layout_width="wrap_content"
       	   android:layout_height="match_parent"
       	   android:orientation="horizontal"
       	   android:clickable="true"
           >
           <TextView 
               android:id="@+id/id_home_show_city_view"
               android:layout_width="wrap_content"
	       	   android:layout_height="match_parent"
	       	   android:layout_marginLeft="@dimen/base_dimen_20"
	       	   android:orientation="horizontal"
	       	   android:text="天津天津"
	       	   android:textColor="#ffffff"
	       	   android:textSize="@dimen/base_dimen_30"
	       	   android:textStyle="bold"
	       	   android:gravity="center"
	       	   android:layout_gravity="center_vertical"
               />
           <ImageView 
               android:layout_width="@dimen/base_dimen_20"
	       	   android:layout_height="@dimen/base_dimen_11"
	       	   android:background="@drawable/home_select_city_more"
	       	   android:layout_marginLeft="@dimen/base_dimen_10"
	       	   android:layout_gravity="center_vertical"
               />
       </LinearLayout>
        <TextView 
               android:layout_width="wrap_content"
	       	   android:layout_height="match_parent"
	       	   android:text="地图租房"
	       	   android:textColor="#ffffff"
	           android:gravity="center_vertical"
	           android:layout_gravity="center"
	           android:textSize="@dimen/base_dimen_38"
	           android:textStyle="bold"
               />
       <FrameLayout 
           android:id="@+id/map_suggest_search"
           android:layout_width="@dimen/base_dimen_100"
       	   android:layout_height="match_parent"
       	   android:layout_gravity="center_vertical|right"
       	   >
	      <ImageView 
	           android:layout_width="@dimen/base_dimen_34"
	       	   android:layout_height="@dimen/base_dimen_34"
	       	   android:background="@drawable/home_tab_search_icon"
	       	   android:layout_gravity="center"
	       	   android:layout_marginRight="@dimen/base_dimen_20"
	          />
	      
       </FrameLayout>
	</FrameLayout>
    
    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/base_dimen_90"
        android:clickable="true" />
    
