<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_90"
        android:background="#337ffd" >

        <ImageView
            android:layout_width="@dimen/base_dimen_44"
            android:layout_height="@dimen/base_dimen_44"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/base_dimen_20"
            android:background="@drawable/short_lease_back"
            android:clickable="true"
            android:onClick="backFinish" />

        <TextView
            android:id="@+id/id_titlebar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="结果详情"
            android:textColor="#ffffff"
            android:textSize="@dimen/base_dimen_38"
            android:textStyle="bold" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="@dimen/base_dimen_18"
            android:layout_height="@dimen/base_dimen_138"
            android:layout_marginLeft="@dimen/base_dimen_30"
            android:layout_marginTop="@dimen/base_dimen_44"
            android:src="@drawable/withdraw_result" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base_dimen_14"
                android:layout_marginTop="@dimen/base_dimen_38"
                android:text="转出申请已提交"
                android:textColor="#337ffd"
                android:textSize="@dimen/base_dimen_32" >
            </TextView>
            
               <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base_dimen_14"
                android:layout_marginTop="@dimen/base_dimen_12"
                android:text="2017-08-22 提现 500元"
                android:textColor="#9f9f9f"
                android:textSize="@dimen/base_dimen_24" />
                
                 <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base_dimen_14"
                android:layout_marginTop="@dimen/base_dimen_60"
                android:text="已完成提现"
                android:textColor="#888888"
                android:textSize="@dimen/base_dimen_32" >
            </TextView>
            
               <TextView
                android:layout_width="@dimen/base_dimen_550"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base_dimen_14"
                android:layout_marginTop="@dimen/base_dimen_12"
                android:text="预计两小时到账，凌晨展出，由于银行 系统维护可能延时到账"
                android:lineSpacingExtra="@dimen/base_dimen_18"
                android:textColor="#9f9f9f"
                android:lines="2"
                android:textSize="@dimen/base_dimen_24" >
            </TextView>
        </LinearLayout>
    </LinearLayout>
         <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_1"
        android:layout_marginTop="@dimen/base_dimen_40"
        android:background="#cccccc" />
          <Button
        android:layout_width="@dimen/base_dimen_680"
        android:layout_height="@dimen/base_dimen_80"
        android:layout_marginTop="@dimen/base_dimen_40"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/withdraw_btn_bg"
        android:textColor="#ffffff"
        android:text="完成" />

</LinearLayout>