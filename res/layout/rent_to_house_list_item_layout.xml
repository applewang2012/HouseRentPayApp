<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent" 
    android:layout_height="@dimen/base_dimen_108"
    android:background="#ffffff"
    android:paddingTop="@dimen/base_dimen_18"
    android:paddingBottom="@dimen/base_dimen_18"
    >
    <LinearLayout 
	    android:layout_width="fill_parent" 
    	android:layout_height="@dimen/base_dimen_30"
    	android:orientation="horizontal">
    	<ImageView 
    	    android:layout_width="@dimen/base_dimen_18" 
	    	android:layout_height="@dimen/base_dimen_26"
	    	android:layout_marginLeft="@dimen/base_dimen_10"
	    	android:layout_gravity="center_vertical"
	    	android:background="@drawable/house_list_location_icon"
    	    />
	    <TextView 
	        android:id="@+id/id_rent_to_house_item_address"
	        android:layout_width="fill_parent" 
	    	android:layout_height="@dimen/base_dimen_30"
	    	android:layout_marginLeft="@dimen/base_dimen_10"
	    	android:singleLine="true"
	    	android:textColor="#333333"
	    	android:textSize="@dimen/base_dimen_26"
	    	android:text="天津市和平区瞰和平16号楼1-202"
	    	android:gravity="left|center_vertical"
	    	android:layout_gravity="center_vertical"
	        />
    </LinearLayout>
	<LinearLayout 
	    android:layout_width="fill_parent" 
    	android:layout_height="@dimen/base_dimen_30"
    	android:layout_marginTop="@dimen/base_dimen_62"
    	android:orientation="horizontal"
    	android:gravity="center_vertical"
	    >
	    <TextView 
	        android:id="@+id/id_rent_to_house_item_type"
	        android:layout_width="@dimen/base_dimen_120" 
	    	android:layout_height="match_parent"
	    	android:textColor="#b2b2b2"
	    	android:textSize="@dimen/base_dimen_26"
	    	android:layout_marginLeft="@dimen/base_dimen_37"
	    	android:text="三室一厅"
	    	android:gravity="left|center_vertical"
	        />
	    <TextView 
	        android:id="@+id/id_rent_to_house_item_direction"
	        android:layout_width="@dimen/base_dimen_100" 
	    	android:layout_height="match_parent"
	    	android:textColor="#b2b2b2"
	    	android:textSize="@dimen/base_dimen_26"
	    	android:layout_marginLeft="@dimen/base_dimen_90"
	    	android:text="东西向"
	    	android:gravity="left|center_vertical"
	        />
	    
	    <TextView 
	        android:id="@+id/id_rent_to_house_item_floor"
	        android:layout_width="@dimen/base_dimen_100" 
	    	android:layout_height="match_parent"
	    	android:textColor="#b2b2b2"
	    	android:textSize="@dimen/base_dimen_26"
	    	android:layout_marginLeft="@dimen/base_dimen_90"
	    	android:text="10/33层"
	    	android:gravity="left|center_vertical"
	        />
	</LinearLayout>
	<ImageView 
    	    android:layout_width="@dimen/base_dimen_20" 
	    	android:layout_height="@dimen/base_dimen_34"
	    	android:layout_marginLeft="@dimen/base_dimen_10"
	    	android:layout_gravity="right|center_vertical"
	    	android:layout_marginRight="@dimen/base_dimen_30"
	    	android:background="@drawable/house_list_more_icon"
    	    />
</FrameLayout>