<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
     >
   <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:layout_marginTop="5dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:orientation="horizontal"
	        >
	        <EditText 
		        android:id="@+id/id_surround_search_input"
		        android:layout_width="0dp"
			    android:layout_height="match_parent"
			    android:layout_weight="4"
			    android:hint="请输入您感兴趣的周边信息"
			    android:gravity="left|center_vertical"
			    android:paddingLeft="3dp"
			    android:textSize="14dp"
			    android:background="@drawable/item_shape_no_solid_corner"
			    android:textColor="#afaeae"
		        />
	        <Button 
	            android:id="@+id/id_surround_search_button"
				android:layout_width="0dp"
			    android:layout_height="35dp"
			    android:layout_weight="1"
			    android:layout_marginLeft="8dp"
			    android:text="搜   索"
			    android:textColor="#ffffff"
			    android:textSize="13dp"
			    android:gravity="center"
			    android:layout_gravity="center_vertical"
			    android:background="@drawable/button_background"
	            />
	        
	   </LinearLayout>
	    
   <tenant.guardts.house.headergridview.StickyGridHeadersGridView
            android:id="@+id/sgv"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="3" >
   </tenant.guardts.house.headergridview.StickyGridHeadersGridView>
    
	  
</FrameLayout>
