<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/base_dimen_590"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_input_idcard_bg"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="@dimen/base_dimen_207"
        android:layout_height="@dimen/base_dimen_207"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/base_dimen_40"
        android:src="@drawable/input_idcard_img" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_1"
        android:background="#a0a0a0" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_dimen_20"
        android:lineSpacingExtra="@dimen/base_dimen_10"
        android:text="@string/write_idcard_to_lock_text"
        android:layout_marginLeft="@dimen/base_dimen_45"
        android:layout_marginRight="@dimen/base_dimen_45"
        android:textColor="#333333"
        android:textSize="@dimen/base_dimen_30" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_1"
        android:layout_marginTop="@dimen/base_dimen_20"
        android:background="#a0a0a0" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/base_dimen_20" 
        android:layout_marginTop="@dimen/base_dimen_30" >
        

        <Button
            android:id="@+id/btn_input_idcard_confirm"
            android:layout_width="@dimen/base_dimen_270"
            android:layout_height="@dimen/base_dimen_70"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/base_dimen_20"
            android:background="@drawable/item_blue_button_no_corner_selector"
            android:text="录入"
            android:textColor="#ffffff"
            android:textSize="@dimen/base_dimen_32" />

        <Button
            android:id="@+id/btn_input_idcard_cancel"
            android:layout_width="@dimen/base_dimen_270"
            android:layout_height="@dimen/base_dimen_70"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/base_dimen_10"
            android:layout_marginRight="@dimen/base_dimen_20"
            android:background="@drawable/item_gray_button_no_corner_selector"
            android:text="取消"
            android:textColor="#337ffd" />
    </FrameLayout>

</LinearLayout>