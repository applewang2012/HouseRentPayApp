<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent" 
    android:layout_height="@dimen/base_dimen_132"
    android:background="#ffffff"
    >
    <LinearLayout 
        android:layout_width="fill_parent" 
    	android:layout_height="@dimen/base_dimen_32"
    	android:layout_marginTop="@dimen/base_dimen_20"
    	android:orientation="horizontal"
        >
        <ImageView 
            android:layout_width="@dimen/base_dimen_20"
    		android:layout_height="@dimen/base_dimen_20"
    		android:layout_marginLeft="@dimen/base_dimen_30"
    		android:layout_gravity="center_vertical"
    		android:background="@drawable/house_surround_life_item_location"
            />
        <TextView 
	        android:id="@+id/id_surround_fragment_item_hot_name"
	        android:layout_width="@dimen/base_dimen_330" 
	    	android:layout_height="fill_parent"
	    	android:layout_marginLeft="@dimen/base_dimen_8"
	    	android:singleLine="true"
	    	android:textColor="#333333"
	    	android:textSize="@dimen/base_dimen_28"
	    	android:text="天津市和平区瞰和平16号楼1-202"
	    	android:gravity="left|center_vertical"
        />
        <ImageView
            android:id="@+id/id_surround_fragment_item_hot_phone_icon"
	        android:layout_width="@dimen/base_dimen_22" 
	    	android:layout_height="@dimen/base_dimen_22"
	    	android:layout_marginLeft="@dimen/base_dimen_75"
	    	android:layout_gravity="center_vertical"
    		android:background="@drawable/house_surround_life_item_telephone"
            />
        <TextView 
	        android:id="@+id/id_surround_fragment_item_hot_phone"
	        android:layout_width="@dimen/base_dimen_172" 
	    	android:layout_height="fill_parent"
	    	android:layout_marginLeft="@dimen/base_dimen_10"
	    	android:textColor="#b2b2b2"
	    	android:textSize="@dimen/base_dimen_24"
	    	android:text="两室"
	    	android:gravity="left|center_vertical"
	        />
    </LinearLayout>
    <ImageView 
        android:layout_width="@dimen/base_dimen_660" 
    	android:layout_height="@dimen/base_dimen_1"
    	android:layout_marginTop="@dimen/base_dimen_66"
    	android:background="#f1f2f3"
    	android:layout_gravity="center_horizontal"
        />
    <TextView 
        android:id="@+id/id_surround_fragment_item_hot_address"
         android:layout_width="@dimen/base_dimen_440" 
    	android:layout_height="@dimen/base_dimen_66"
    	android:layout_marginTop="@dimen/base_dimen_60"
    	android:layout_marginLeft="@dimen/base_dimen_58"
    	android:singleLine="true"
    	android:textColor="#b2b2b2"
    	android:textSize="@dimen/base_dimen_26"
    	android:text="天津市和平区瞰和平16号楼1-202"
    	android:gravity="left|center_vertical"
        />
	    
</FrameLayout>