<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:guardts="http://schemas.android.com/apk/res/tenant.guardts.house"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/base_dimen_90"
        android:background="#337ffd"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/id_home_select_city_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/id_home_show_city_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/base_dimen_20"
                android:gravity="center"
                android:orientation="horizontal"
                android:textColor="#ffffff"
                android:textSize="@dimen/base_dimen_30"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/base_dimen_20"
                android:layout_height="@dimen/base_dimen_11"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/base_dimen_10"
                android:background="@drawable/home_select_city_more"
                android:visibility="gone" />
        </LinearLayout>

       <TextView
           android:id="@+id/id_titlebar"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:text="首页"
           android:textColor="#ffffff"
           android:gravity="center_vertical"
           android:layout_gravity="center"
           android:textSize="@dimen/base_dimen_38"
           android:textStyle="bold"
       	/> 
        
        <TextView
            android:id="@+id/textview_login"
            android:layout_width="@dimen/base_dimen_80"
            android:layout_height="@dimen/base_dimen_40"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="@dimen/base_dimen_100"
            android:gravity="center"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="@dimen/base_dimen_34"
            android:textStyle="bold" />
        
        <FrameLayout
            android:id="@+id/home_search_container"
            android:layout_width="@dimen/base_dimen_100"
            android:layout_height="@dimen/base_dimen_90"
            android:layout_gravity="right"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/base_dimen_34"
                android:layout_height="@dimen/base_dimen_34"
                android:layout_gravity="center"
                android:background="@drawable/home_tab_search_icon" />
           
        </FrameLayout>
    </FrameLayout>

    <android.support.v4.widget.SwipeRefreshLayout 
        android:id="@+id/id_swipe_ly"  
        android:layout_width="match_parent"  
        android:layout_height="match_parent" 
        android:layout_marginTop="@dimen/base_dimen_90"
        android:layout_marginBottom="@dimen/base_dimen_5"
        >  
        
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
			<FrameLayout
                android:id="@+id/id_viewflow_framelayout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/base_dimen_250" >
	            <tenant.guardts.house.bannerview.ViewFlow
	                    android:id="@+id/id_fragment_home_viewflow"
	                    android:layout_width="fill_parent"
	                    android:layout_height="@dimen/base_dimen_250"
	                    />

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@color/transparent"
                    android:gravity="center" >
                    
					<tenant.guardts.house.bannerview.CircleFlowIndicator
                        android:id="@+id/id_fragment_home_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:padding="2dip"
                        app:activeColor="#337ffd"
                        app:activeType="fill"
                        app:circleSeparation="20dip"
                        app:inactiveColor="#ffffff"
                        app:inactiveType="fill"
                        app:radius="4dip" />
                       
                </FrameLayout>
            </FrameLayout>
            
<!--             <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_250"
                android:src="@drawable/home_fragment_bg" >
            </ImageView> -->

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_6"
                android:background="#f1f1f1" />

            <RadioGroup
                android:id="@+id/home_radiogrouop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_90"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/home_radio_share"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/home_radiobutton_bg"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="共享房屋"
                    android:textColor="@drawable/home_frag_radiobutton_text_bg"
                    android:textSize="@dimen/base_dimen_32"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1px"
                    android:layout_height="@dimen/base_dimen_60"
                    android:layout_gravity="center_vertical"
                    android:background="#cccccc" />

                <RadioButton
                    android:id="@+id/home_radio_owner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/home_radiobutton_bg"
                    android:button="@null"
                    android:gravity="center"
                    android:text="我是房主"
                    android:textColor="@drawable/home_frag_radiobutton_text_bg"
                    android:textSize="@dimen/base_dimen_32"
                    android:textStyle="bold" />
            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_1"
                android:background="#f1f1f1" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_180" >

                <LinearLayout
                    android:id="@+id/id_share_house_content"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base_dimen_180"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/id_share_house_duanzu"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="@dimen/base_dimen_80"
                            android:layout_height="@dimen/base_dimen_80"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/base_dimen_30"
                            android:background="@drawable/fgt_share_house_duanzu_share" />

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/base_dimen_1"
                            android:gravity="center"
                            android:text="短租共享"
                            android:textColor="#999999"
                            android:textSize="@dimen/base_dimen_32" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/id_share_house_ditu"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="@dimen/base_dimen_80"
                            android:layout_height="@dimen/base_dimen_80"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/base_dimen_30"
                            android:background="@drawable/fgt_share_house_map_zhufang" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/base_dimen_1"
                            android:gravity="center"
                            android:text="地图租房"
                            android:textColor="#999999"
                            android:textSize="@dimen/base_dimen_32" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/id_house_owner_content"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base_dimen_180"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/id_home_house_owner_dengji"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="@dimen/base_dimen_80"
                            android:layout_height="@dimen/base_dimen_80"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/base_dimen_30"
                            android:background="@drawable/fgt_house_owner_dengji_house" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/base_dimen_1"
                            android:gravity="center"
                            android:text="登记房屋"
                            android:textColor="#999999"
                            android:textSize="@dimen/base_dimen_32" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/id_home_house_owner_weixiu"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/base_dimen_30"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="@dimen/base_dimen_80"
                            android:layout_height="@dimen/base_dimen_80"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/fgt_house_owner_remand_house" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/base_dimen_1"
                            android:gravity="center"
                            android:text="维修服务"
                            android:textColor="#999999"
                            android:textSize="@dimen/base_dimen_32" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/id_home_house_owner_gaizhao"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/base_dimen_30"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="@dimen/base_dimen_80"
                            android:layout_height="@dimen/base_dimen_80"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/fgt_house_owner_update_house" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/base_dimen_1"
                            android:gravity="center"
                            android:text="改造房屋"
                            android:textColor="#999999"
                            android:textSize="@dimen/base_dimen_32" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_6"
                android:background="#f1f1f1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_146"
                android:layout_marginTop="6dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_government_service"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/government"
                    android:gravity="center"
                    android:text="政府服务"
                    android:textColor="#464646"
                    android:textSize="@dimen/base_dimen_26" />

                <TextView
                    android:id="@+id/tv_hexi_power"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/power"
                    android:gravity="center"
                    android:text="河西力量"
                    android:textColor="#464646"
                    android:textSize="@dimen/base_dimen_26" />

                <TextView
                    android:id="@+id/tv_safeguard_rights"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/rights"
                    android:gravity="center"
                    android:text="维权常识"
                    android:textColor="#464646"
                    android:textSize="@dimen/base_dimen_26" />

                <TextView
                    android:id="@+id/tv_medical_insurance"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/hospital"
                    android:gravity="center"
                    android:text="医疗保险"
                    android:textColor="#464646"
                    android:textSize="@dimen/base_dimen_26" />
               
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_146"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_triffic"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/traffic"
                    android:gravity="center"
                    android:text="交通出行"
                    android:textColor="#464646"
                    android:textSize="@dimen/base_dimen_26" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/call"
                    android:gravity="center"
                    android:text="常用电话"
                    android:textColor="#464646"
                    android:textSize="@dimen/base_dimen_26" />

                <TextView
                    android:id="@+id/tv_surrounds"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/surrounds"
                    android:gravity="center"
                    android:text="周边商区"
                    android:textColor="#464646"
                    android:textSize="@dimen/base_dimen_26" />

                <TextView
                    android:id="@+id/tv_more"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/more_content"
                    android:gravity="center"
                    android:text="更多"
                    android:textColor="#464646"
                    android:textSize="@dimen/base_dimen_26" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_1"
                android:background="#cccccc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_80" >

                <ImageView
                    android:layout_width="@dimen/base_dimen_168"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/hot_listings" />

                <View
                    android:layout_width="@dimen/base_dimen_1"
                    android:layout_height="@dimen/base_dimen_32"
                    android:layout_gravity="center_vertical"
                    android:background="#cccccc" />

                <TextView
                    android:layout_width="@dimen/base_dimen_293"
                    android:layout_height="@dimen/base_dimen_30"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/base_dimen_28"
                    android:text="租房时需要注意哪些问题"
                    android:textColor="#555555"
                    android:textSize="@dimen/base_dimen_24" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_1"
                android:background="#cccccc" />

            <tenant.guardts.house.view.HomeFragmentListView
                android:id="@+id/id_home_house_fragment_listview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_420"
                android:cacheColorHint="#00000000"
                android:divider="#afaeae"
                android:dividerHeight="@dimen/base_dimen_1"
                android:fadingEdge="none" />
        </LinearLayout>
    </ScrollView>
	</android.support.v4.widget.SwipeRefreshLayout>
	
</FrameLayout>