<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
	<ImageView
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:id="@+id/id_splash_background"
	    android:scaleType="fitXY"
	    android:src="@drawable/house_splash_bg"
	    />
	<ImageView
	    android:layout_width="@dimen/base_dimen_496"
	    android:layout_height="@dimen/base_dimen_702"
	    android:src="@drawable/splash_app_logo"
	    android:layout_marginLeft="@dimen/base_dimen_132"
	    android:layout_marginTop="@dimen/base_dimen_146"
	    />
	<FrameLayout 
	    android:id="@+id/id_splash_show_logo_animation"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/base_dimen_383"
	    android:background="@drawable/splash_app_icon_bg"
	    android:layout_gravity="bottom"
	    android:visibility="invisible"
	    >
	    <ImageView
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/base_dimen_90"
		    android:src="@drawable/splash_app_icon"
		    android:layout_gravity="bottom"
		    android:layout_marginBottom="@dimen/base_dimen_80"
	    />
	</FrameLayout>
	
    <ProgressBar android:id="@+id/splash_loading"
   		android:layout_width="54dp"
    	android:layout_height="12dp"
    	android:layout_alignParentBottom="true"
    	android:layout_centerHorizontal="true"
    	android:layout_marginBottom="40dp"
    	android:visibility="invisible"
    	android:indeterminateOnly="true" />
</FrameLayout>
