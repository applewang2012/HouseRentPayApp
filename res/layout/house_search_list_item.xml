<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent" 
    android:layout_height="70dp"
    android:orientation="vertical"
    android:paddingRight="@dimen/base_dimen_40"
    android:paddingBottom="5dp"
    android:textColor="#ffffff"
    android:paddingLeft="@dimen/base_dimen_30">
    
  
    <TextView 
        android:id="@+id/id_house_address"
        android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:layout_marginTop="10dp"
    	android:textColor="#444444"
    	android:textSize="15dp"
    	android:drawableLeft="@drawable/house_list_location_icon"
    	android:drawablePadding="5dp"
    	android:text="天津市和平区瞰和平16号楼1-202"
    	android:gravity="left|center_vertical"
        />
  
	<LinearLayout 
	    android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:layout_marginTop="8dp"
    	android:orientation="horizontal"
    	 android:paddingLeft="13dp"
	    >
	    <TextView 
	        android:id="@+id/id_house_type"
	        android:layout_width="0dp" 
	    	android:layout_height="wrap_content"
	    	android:layout_weight="2"
	    	android:singleLine="true"
	    	android:textColor="#666666"
	    	android:textSize="14dp"
	    	android:text="两室"
	    	android:gravity="left|center_vertical"
	        />
	    <TextView 
	        android:id="@+id/id_house_direction"
	        android:layout_width="0dp" 
	    	android:layout_height="wrap_content"
	    	android:layout_weight="2"
	    	android:singleLine="true"
	    	android:textColor="#666666"
	    	android:textSize="14dp"
	    	android:text="东西向"
	    	android:gravity="center_vertical"
	        />
	    <TextView 
	        android:id="@+id/id_house_area"
	        android:layout_width="0dp" 
	    	android:layout_height="wrap_content"
	    	android:layout_weight="3"
	    	android:singleLine="true"
	    	android:textColor="#666666"
	    	android:textSize="14dp"
	    	android:text="18/30层"
	    	android:gravity="center_vertical"
	        />
	    
	    <TextView 
	        android:id="@+id/id_house_floor"
	        android:layout_width="0dp" 
	    	android:layout_height="wrap_content"
	    	android:layout_weight="2"
	    	android:singleLine="true"
	    	android:textColor="#666666"
	    	android:textSize="14dp"
	    	android:text="18/30层"
	    	android:gravity="right|center_vertical"
	        />
	    
	</LinearLayout>
</LinearLayout>